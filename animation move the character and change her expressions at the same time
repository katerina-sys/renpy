image anim_c:
    parallel:
        "holy1.png" with Dissolve(0.5)
        pause 1.0
        "holy2.png" with Dissolve(0.5)
        pause 1.0
        repeat
    parallel:
        xalign 0.0 yalign 0.0
        linear 1.0 xalign 1.0
        xalign 1.0 yalign 0.0
        linear 1.0 xalign 0.0
        repeat
# анимация смены позиции и эмоции персонажей в одном
